<%- include("header") -%>

      <div class="box" id="heading">
        <h1><%= listTitle %>!</h1>
      </div>
<div class="box">
    
        <%  newListItems.map(it=> { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= it._id%>" onChange="this.form.submit()" >
                 <p><%= it.name %></p>
                </div>
            </form>
           
<% })%>

<form class="item" action="/" method="post">
    <input type="text" name="newName" placeholder="New Item" autocomplete="off" >
    <button type="submit" name="list" value=<%=listTitle%>>+</button>
    </form>
</div>    
